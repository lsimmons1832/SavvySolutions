<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Savvy Solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Savvy Solutions", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewContext.HttpContext.User.IsInRole("Stylist"))
                    {
                        <li>@Html.ActionLink("My Appointments", "Index", "Appointment")</li>
                        <li>@Html.ActionLink("My Schedule", "Index", "Schedule")</li>
                        <li>@Html.ActionLink("My Services", "Index", "Service")</li>
					}
					@if (ViewContext.HttpContext.User.IsInRole("Customer"))
					{
                        <li>@Html.ActionLink("My Appointments", "Index", "Appointment")</li>
                        <li>@Html.ActionLink("Book Appointment", "Create", "Appointment")</li>
                        <li>@Html.ActionLink("My Profile", "Details", "Customer")</li>
                    @*<li>@Html.ActionLink("Services", "Index", "Service")</li>
                    <li>@Html.ActionLink("Stylist", "Index", "Stylist")</li>*@
                    }
					@if (ViewContext.HttpContext.User.IsInRole("Admin"))
					{
						<li>@Html.ActionLink("Appointment", "Index", "Appointment")</li>
						<li>@Html.ActionLink("Customer", "Index", "Customer")</li>
						<li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
						<li>@Html.ActionLink("Services", "Index", "Service")</li>
						<li>@Html.ActionLink("Stylist", "Index", "Stylist")</li>
					}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Savvy Solutions</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
